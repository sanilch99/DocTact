<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homes.DoctorFull.DoctorHome">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimaryDark"
            app:title="DocTact"
            app:titleTextColor="@color/MainBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/DocTool"
            >

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/DocTool"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/DocBotNav"
            android:id="@+id/DocFramCont"
            />

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimaryDark"
            app:itemIconTint="#FFF"
            app:itemTextColor="#FFF"
            android:id="@+id/DocBotNav"
            app:layout_constraintTop_toBottomOf="@id/DocFramCont"
            app:layout_constraintLeft_toLeftOf="parent"
            app:menu="@menu/docnav"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </android.support.design.widget.BottomNavigationView>

    </android.support.constraint.ConstraintLayout>
