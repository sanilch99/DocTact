<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@drawable/layout_bg">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/bidDocPic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biDocName"
        app:layout_constraintTop_toBottomOf="@id/bidDocPic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Doctor Name"
        android:textSize="32sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/biDocName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/biDocSpec"
        android:layout_margin="5dp"
        android:text="Speciality"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/biDocAddr"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/biDocSpec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="Address in dasdh aksjdh kashdk ahskd haskdjh kash dk"
        android:textSize="24sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:id="@+id/BookDoc"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>






</android.support.constraint.ConstraintLayout>